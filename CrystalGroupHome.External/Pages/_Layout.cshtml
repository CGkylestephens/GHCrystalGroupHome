@using Microsoft.AspNetCore.Components.Web
@using CrystalGroupHome.External.Helpers
@namespace CrystalGroupHome.External.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var nonce = SecurityHelper.GetCspNonce(Context);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />

    <!-- Blazorise core + Bootstrap 5 provider -->
    <link rel="stylesheet" href="_content/Blazorise/blazorise.css" />
    <link rel="stylesheet" href="_content/Blazorise.Bootstrap5/blazorise.bootstrap5.css" />

    <!-- Font Awesome from Blazorise Icons package (v6 path) -->
    <link rel="stylesheet" href="_content/Blazorise.Icons.FontAwesome/v6/css/all.css" />

    <link rel="stylesheet" href="_content/CrystalGroupHome.SharedRCL/css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="_content/CrystalGroupHome.SharedRCL/css/site.css" />

    <link href="CrystalGroupHome.External.styles.css" rel="stylesheet" />
    
    <!-- External font resources (allowed by CSP) -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Fira+Sans+Extra+Condensed:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
@*     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" /> *@
    
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <!-- Blazor Server script with nonce for CSP compliance -->
    <script src="_framework/blazor.server.js" nonce="@nonce"></script>
</body>
</html>