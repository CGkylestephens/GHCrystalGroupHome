@page "/rma-processing"
@page "/rma-processing/dashboard"
@attribute [Authorize(Policy = AuthorizationPolicies.RMAProcessingAccess)]
@using CrystalGroupHome.Internal.Authorization
@using CrystalGroupHome.Internal.Features.RMAProcessing.Components
@inherits RMALandingPageBase

<PageTitle>RMA Processing - Crystal Group</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-0">
                        <i class="fas fa-cogs me-2 text-primary"></i>
                        RMA Processing
                    </h2>
                    <p class="text-muted mb-0">Manage RMAs and associated files</p>
                </div>
                <div>
                    <Button Color="Color.Primary" Clicked="@NavigateToUpload">
                        <i class="fas fa-upload me-1"></i>
                        Upload Files
                    </Button>
                </div>
            </div>
            
            <RMAGrid />
        </div>
    </div>
</div>